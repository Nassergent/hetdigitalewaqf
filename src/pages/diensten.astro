export const prerender = true
import Layout from '../layouts/Layout.astro';

const features = [
  { title: 'Professioneel Webdesign', desc: 'Op maat ontworpen websites die de identiteit van jouw moskee weerspiegelen. Modern, toegankelijk en mobielvriendelijk. Gebouwd met de nieuwste technologie voor maximale snelheid en betrouwbaarheid.', icon: 'M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z' },
  { title: 'Gebedstijden Integratie', desc: 'Automatische weergave van dagelijkse gebedstijden en iqamah-tijden. Koppeling met externe API\'s of handmatige invoer door de imam, inclusief zomer- en wintertijdberekeningen.', icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z' },
  { title: 'Veilig Donatiesysteem (Mollie)', desc: 'Veilige online betalingen via Mollie met iDEAL en Bancontact. Eenmalige of terugkerende donaties voor projecten en de moskee. Volledig conform onze governance-principes.', icon: 'M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z' },
  { title: 'CMS & Bestuursbeheer', desc: 'Beheer en publiceer nieuws, lessen, lezingen, Ramadan-programma\'s en community-evenementen via een simpel en intu√Øtief CMS. Geen technische kennis vereist.', icon: 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z' },
  { title: 'Veilige Hosting & SSL', desc: 'Hosting op razendsnelle, beveiligde servers met automatisch SSL-certificaat. Jouw data is in goede handen met 99.9% uptime garantie en dagelijkse back-ups.', icon: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z' },
  { title: 'Doorlopend Onderhoud', desc: 'Wij zorgen voor updates, back-ups, beveiligingspatches en technische support. Het bestuur kan zich volledig focussen op de gemeenschap. Structureel, niet tijdelijk.', icon: 'M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.066 2.573c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.573 1.066c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.066-2.573c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z' },
